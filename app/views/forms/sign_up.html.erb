<h2>Sign Up</h2>

<%= form_for :create do |f| %>
  <%= f.label :email %>
  <%= f.email_field :post_author %>

  <%= f.label :password %>
  <em>(8 characters minimum)</em><br>
  <%= password_field_tag(:password) %> <br>

  <%= f.label :password_confirmation %>
  <%= password_field_tag(:password_confirmation) %> <br>

  <%= f.submit "Sign Up" %>
<% end %>
