<%= link_to "&larr; Back".html_safe, root_path %>

<article>
    <h2><%= @post.title %></h2>
    <time><%= "Created by #{@post.post_author} at #{@post.created_at}" %></time>
    <p><%= @post.post_content %></p>
</article>

<%= link_to "Edit Post", edit_post_path(@post) %>
<%= link_to "Delete Post", post_path(@post), method: :delete %>

<div class="comments">
  <h3>Comments</h3>
  <%= link_to "New Comment", new_post_comment_path(@post) %>
  <% @post.comments.each do |comment| %>
    <div>
      <time><%= "Created by #{comment.comment_author} at #{comment.created_at}"%></time>
      <p><%= comment.comment_content %></p>>
      <%= link_to "Edit", edit_post_comment_path(@post) %>
      <%= link_to "Delete", post_comment_path(@post), method: :delete %>
    </div>
  <% end %>
</div>
